    <script>
        function calculateSum() {
            // ‡∏£‡∏±‡∏ö‡∏Ñ‡πà‡∏≤‡∏à‡∏≤‡∏Å input fields
            const number1 = document.getElementById('number1').value;
            const number2 = document.getElementById('number2').value;
            const resultContainer = document.getElementById('resultContainer');
            
            // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Ñ‡∏£‡∏ö‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
            if (number1 === '' || number2 === '') {
                resultContainer.innerHTML = `
                    <div>
                        <div class="result-text">‚ùå ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö‡∏ó‡∏±‡πâ‡∏á 2 ‡∏ä‡πà‡∏≠‡∏á</div>
                        <div class="error-message">‡πÇ‡∏õ‡∏£‡∏î‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á</div>
                    </div>
                `;
                return;
            }
            
            // ‡πÅ‡∏õ‡∏•‡∏á‡πÄ‡∏õ‡πá‡∏ô‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡πÅ‡∏•‡∏∞‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì
            const num1 = parseFloat(number1);
            const num2 = parseFloat(number2);
            const sum = num1 + num2;
            
            // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡πÄ‡∏õ‡πá‡∏ô‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
            if (isNaN(num1) || isNaN(num2)) {
                resultContainer.innerHTML = `
                    <div>
                        <div class="result-text">‚ùå ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á</div>
                        <div class="error-message">‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡∏ï‡πâ‡∏≠‡∏á‡πÄ‡∏õ‡πá‡∏ô‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏à‡∏£‡∏¥‡∏á</div>
                    </div>
                `;
                return;
            }
            
            // ‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏£‡∏ß‡∏°
            resultContainer.innerHTML = `
                <div>
                    <div class="result-text">‚úÖ ‡∏ú‡∏•‡∏£‡∏ß‡∏°</div>
                    <div class="result-value">${num1} + ${num2} = ${sum}</div>
                </div>
            `;
            
            // ‡πÄ‡∏û‡∏¥‡πà‡∏° animation
            resultContainer.classList.remove('result-animation');
            setTimeout(() => {
                resultContainer.classList.add('result-animation');
            }, 10);
        }
        
        // ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏Å‡∏î Enter ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì
        document.addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                calculateSum();
            }
        });
        
        // ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Å‡∏≤‡∏£‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö input ‡πÅ‡∏ö‡∏ö real-time
        document.getElementById('number1').addEventListener('input', clearResult);
        document.getElementById('number2').addEventListener('input', clearResult);
        
        function clearResult() {
            const resultContainer = document.getElementById('resultContainer');
            resultContainer.innerHTML = '<div class="result-text">‡∏ú‡∏•‡∏£‡∏ß‡∏°‡∏à‡∏∞‡πÅ‡∏™‡∏î‡∏á‡∏ó‡∏µ‡πà‡∏ô‡∏µ‡πà</div>';
            resultContainer.classList.remove('result-animation');
        }
    </script>
