        });

        // ‡πÄ‡∏û‡∏¥‡πà‡∏° Event Listener ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö keyboard shortcuts
        document.addEventListener('keydown', function(event) {
            switch(event.key.toLowerCase()) {
                case 'r':
                    redBtn.click();
                    break;
                case 'g':
                    greenBtn.click();
                    break;
                case 'b':
                    blueBtn.click();
                    break;
                case 'escape':
                    body.className = 'bg-default';
                    removeActiveFromAll();
                    updateStatus('default', '‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô');
                    break;
            }
        });

